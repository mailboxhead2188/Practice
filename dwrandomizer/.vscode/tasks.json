{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Remove CLI Build Directory",
            "type": "shell",
            "command": "rm",
            "args": ["-f", "-d", "-r", "${workspaceFolder}/buildcli"],
            "options": {
                "cwd": "/usr/bin",
            },
        },
        {
            "label": "Remove GUI Build Directory",
            "type": "shell",
            "command": "rm",
            "args": ["-f", "-d", "-r", "${workspaceFolder}/buildgui"],
            "options": {
                "cwd": "/usr/bin"
            },
        },
        {
            "label": "Create CLI Build Directory",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "${workspaceFolder}/buildcli"],
            "options": {
                "cwd": "/usr/bin"
            },
            "dependsOn":["Remove CLI Build Directory"]
        },
        {
            "label": "Create GUI Build Directory",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "${workspaceFolder}/buildgui"],
            "options": {
                "cwd": "/usr/bin"
            },
            "dependsOn":["Remove GUI Build Directory"]
        },
        {
            "type": "shell",
            "label": "Create CLI Makefile",
            "command": "/usr/bin/qmake",
            "args": ["../dwrandomizer-cli.pro"],
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildcli"
            },
            "dependsOn":["Create CLI Build Directory"]
        },
        {
            "type": "shell",
            "label": "Create GUI Makefile",
            "command": "/usr/bin/qmake",
            "args": ["../dwrandomizer.pro"],
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildgui"
            },
            "dependsOn":["Create GUI Build Directory"]
        },
        {
            "type": "shell",
            "label": "Build CLI",
            "command": "/usr/bin/make",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildcli"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create CLI Makefile"],
        },
        {
            "type": "shell",
            "label": "Build GUI",
            "command": "/usr/bin/make",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildgui"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create GUI Makefile"],
        },


        {
            "label": "Remove CLI Debug Build Directory",
            "type": "shell",
            "command": "rm",
            "args": ["-f", "-d", "-r", "${workspaceFolder}/buildclidebug"],
            "options": {
                "cwd": "/usr/bin",
            },
        },
        {
            "label": "Remove GUI Debug Build Directory",
            "type": "shell",
            "command": "rm",
            "args": ["-f", "-d", "-r", "${workspaceFolder}/buildguidebug"],
            "options": {
                "cwd": "/usr/bin"
            },
        },
        {
            "label": "Create CLI Debug Build Directory",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "${workspaceFolder}/buildclidebug"],
            "options": {
                "cwd": "/usr/bin"
            },
            "dependsOn":["Remove CLI Debug Build Directory"]
        },
        {
            "label": "Create GUI Debug Build Directory",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "${workspaceFolder}/buildguidebug"],
            "options": {
                "cwd": "/usr/bin"
            },
            "dependsOn":["Remove GUI Debug Build Directory"]
        },
        {
            "type": "shell",
            "label": "Create CLI Debug Makefile",
            "command": "/usr/bin/qmake",
            "args": ["../dwrandomizer-cli-debug.pro"],
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildclidebug"
            },
            "dependsOn":["Create CLI Debug Build Directory"]
        },
        
        {
            "type": "shell",
            "label": "Create GUI Debug Makefile",
            "command": "/usr/bin/qmake",
            "args": ["../dwrandomizer-debug.pro"],
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildguidebug"
            },
            "dependsOn":["Create GUI Debug Build Directory"]
        },
        {
            "type": "shell",
            "label": "Build CLI Debug",
            "command": "/usr/bin/make",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildclidebug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create CLI Debug Makefile"],
        },
        {
            "type": "shell",
            "label": "Build GUI Debug",
            "command": "/usr/bin/make",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/buildguidebug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create GUI Debug Makefile"],
        },
     ]
  }